<UserControl x:Class="TheEyeOfCthulhu.WPF.Controls.VisionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640"
             Background="Black"
             ClipToBounds="True">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    
    <Grid x:Name="RootGrid">
        <!-- Conteneur zoomable -->
        <Grid x:Name="ZoomContainer" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1" />
                    <TranslateTransform x:Name="PanTransform" X="0" Y="0" />
                </TransformGroup>
            </Grid.RenderTransform>
            
            <!-- Image principale -->
            <Image x:Name="ImageDisplay" 
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="NearestNeighbor" />
            
            <!-- Overlay pour ROI -->
            <Canvas x:Name="OverlayCanvas"
                    Background="Transparent"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <!-- Rectangle de sélection ROI -->
                <Border x:Name="SelectionRect"
                        BorderBrush="#00FF00"
                        BorderThickness="2"
                        Background="#3000FF00"
                        Visibility="Collapsed"
                        IsHitTestVisible="False" />
            </Canvas>
        </Grid>
        
        <!-- Info overlay (FPS, résolution, etc.) - hors du zoom -->
        <Border x:Name="InfoPanel"
                Background="#80000000"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Padding="8,4"
                CornerRadius="4"
                IsHitTestVisible="False"
                Visibility="{Binding ShowInfo, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}, FallbackValue=Visible}">
            <StackPanel>
                <TextBlock x:Name="FpsText" 
                           Foreground="LimeGreen" 
                           FontFamily="Consolas" 
                           FontSize="14" 
                           Text="-- FPS" />
                <TextBlock x:Name="ResolutionText" 
                           Foreground="White" 
                           FontFamily="Consolas" 
                           FontSize="12" 
                           Text="-- x --" />
                <TextBlock x:Name="StatusText" 
                           Foreground="Yellow" 
                           FontFamily="Consolas" 
                           FontSize="12" 
                           Text="Stopped" />
                <TextBlock x:Name="ZoomText" 
                           Foreground="Orange" 
                           FontFamily="Consolas" 
                           FontSize="11" 
                           Text="" />
                <TextBlock x:Name="RoiText" 
                           Foreground="Cyan" 
                           FontFamily="Consolas" 
                           FontSize="11" 
                           Text="" />
            </StackPanel>
        </Border>
        
        <!-- Message quand pas de source -->
        <TextBlock x:Name="NoSourceText"
                   Text="No video source"
                   Foreground="Gray"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="Visible" />
    </Grid>
</UserControl>
