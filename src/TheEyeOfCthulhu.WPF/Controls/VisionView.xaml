<UserControl x:Class="TheEyeOfCthulhu.WPF.Controls.VisionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640"
             Background="Black">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    
    <Grid>
        <!-- Image principale -->
        <Image x:Name="ImageDisplay" 
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="NearestNeighbor" />
        
        <!-- Overlay pour dessiner (contours, points, etc.) -->
        <Canvas x:Name="OverlayCanvas" 
                IsHitTestVisible="False" />
        
        <!-- Info overlay (FPS, rÃ©solution, etc.) -->
        <Border x:Name="InfoPanel"
                Background="#80000000"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Padding="8,4"
                CornerRadius="4"
                Visibility="{Binding ShowInfo, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}, FallbackValue=Visible}">
            <StackPanel>
                <TextBlock x:Name="FpsText" 
                           Foreground="LimeGreen" 
                           FontFamily="Consolas" 
                           FontSize="14" 
                           Text="-- FPS" />
                <TextBlock x:Name="ResolutionText" 
                           Foreground="White" 
                           FontFamily="Consolas" 
                           FontSize="12" 
                           Text="-- x --" />
                <TextBlock x:Name="StatusText" 
                           Foreground="Yellow" 
                           FontFamily="Consolas" 
                           FontSize="12" 
                           Text="Stopped" />
            </StackPanel>
        </Border>
        
        <!-- Message quand pas de source -->
        <TextBlock x:Name="NoSourceText"
                   Text="No video source"
                   Foreground="Gray"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Visible" />
    </Grid>
</UserControl>
